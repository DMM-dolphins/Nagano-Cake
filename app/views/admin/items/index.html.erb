<div class="container">
  <h5 class="text-center", style="background-color:#eee; width:120px; margin:30px 0 0 115px;">商品一覧</h5>
    <div class="text-right">
  <%= link_to "商品新規登録",new_admin_item_path%>
      <table class="table table-borderless" >
        <thead>
          <tr class="table-active">
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th></th>
            <th>ステータス</th>
          </tr>
        </thead>
         <tbody>
           <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td class="text-decoration:underline">
                <%= link_to admin_item_path(item.id), class:"text-dark" do %>
                <%= item.name %>
                <% end %>
              </td>

              <td><%= item.price.to_s(:delimited) %></td>
              <td><%= item.genre.name %></td>

              <!--販売ステータス-->
              <% if item.is_active == true %>
                <td class="text-success font-weight-bold">販売中</td>
              <% else %>
                <td class="text-secondary font-weight-bold">販売停止中</td>
              <% end %>
            </tr>
          <% end %>
         </tbody>
      </table>
    </div>
  </div>