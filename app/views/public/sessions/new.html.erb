<div class='container'>
  <div class='row'>
    <div class='col-md-8 offset-2'>
      <h4 class="my-4 mt-5", style="background-color: #eee; width:150px; padding-left: 12px;">ログイン</h4><br>
      <h5 class="my-6", style="background-color: #eee; width:300px; padding-left: 12px;">会員の方はこちらからログイン</h6>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field text-center">
    <%= f.label :メールアドレス, style:"margin-right:20px; margin-top:20px;"  %>
    <%= f.email_field :email, placeholder:"sample@sample.com", autofocus: true, autocomplete: "email",size: "40"%>
  </div>

  <div class="field text-center">
    <%= f.label :パスワード, style:"margin-right:50px;" %>
    <%= f.password_field :password, autocomplete: "current-password",size: "40" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-center">
    <%= f.submit "ログイン", class: "btn btn-primary px-5", style:"font-weight:bold;margin-right:60px;" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
  </div>
 </div>
</div>