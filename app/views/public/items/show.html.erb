  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <table>
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                  <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="col-md-10">
        <div class="row">
          
          <div class="col-md-5">
            <%= image_tag @item.get_item_image(200, 200) %>
          </div>
          
          <div class="col-md-5">
            <h3><%= @item.name %></h3>
            <h5><%= @item.introduction %></h5>
            <h5>￥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</h5>
            <% if @item.is_active == true %>
              <%= form_with model: @cart_item,url: cart_items_path, local: true do |f| %>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.select :amount, *[1..10], {include_blank: '個数選択'} %>
                <%= f.submit "カートに入れる", class: "btn btn-success" %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
