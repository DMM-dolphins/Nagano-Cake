<div class="container">
  <h5 class="text-center", style="background-color:#eee; width:120px; margin:30px 0 30px 115px;"><b>商品編集</b></h5>
  <div class="row">
    <div class="col-8 m-auto">
      <div class="col-10">
  
    <%= form_with model: @item, url: admin_item_path(@item.id) do |f|%>

    <%= f.label :item_image, "商品画像" %>
    <%= f.file_field :item_image, accept: 'image/*' %><br>

    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, placeholder: "商品名"%><br>
    
   <%= f.label :introduction,"商品説明" %></td>
	 <%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %><br>
	 
    <%= f.label:genre_id,"ジャンル" %>
    <%= f.collection_select :genre_id,@genres, :id, :name, include_blank: "--選択してください--"%><br>
    

    
    <%= f.label :price, "税抜価格"%>
    <%= f.text_field :price, placeholder: "1000"%>円<br>
    
    <%= f.label :is_active, "販売ステータス"%>
    <%= f.radio_button :is_active, "true", checked: true %>販売中<%= f.radio_button :is_active, "false" %>販売停止中<br>
    
    <%= f.submit "変更を保存", class: 'btn btn-success' %>

     <% end %>
       </div>
    </div>
  </div>
</div>