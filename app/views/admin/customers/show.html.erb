<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8">
      <h4><%= @customer.full_name %>さんの会員詳細</h4>
      <table class="table table-borderless">
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.full_name_space %></th>
        </tr>
         <tr>
           <th>フリガナ</th>
           <th><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></th>
         </tr>
         <tr>
           <th>郵便番号</th>
           <th>〒<%= @customer.postal_code.to_s.insert(3, "-") %></th>
         </tr>
         <tr>
           <th>住所</th>
           <th><%= @customer.address %></th>
         </tr>
         <tr>
           <th>電話番号</th>
           <th><%= @customer.phone_number %></th>
         </tr>
         <tr>
           <th>メールアドレス</th>
           <th><%= @customer.email %></th>
         </tr>
         <tr>
           <th>会員ステータス</th>
           <th><% if @customer.is_deleted == false %>
                  <p class="text-success">有効</p>
                <% else %>
                  <p class="text-secondary">退会</p>
                <% end %>
           </th>
         </tr>
         <tr>
           <td></td>
           <td><%= link_to "編集する",edit_admin_customer_path(@customer), class:"btn btn-success" %></td>
         </tr>
      </table>
    </div>
  </div>
</div>



