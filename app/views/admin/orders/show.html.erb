<h4>注文履歴詳細</h4>
<table class="table table borderless">
  <tr>
    <td>購入者</td>
    <td><%= link_to admin_customer_path(@order) do %>
          <%= @order.customer.full_name %>
        <% end %>
    </td>
  </tr>
  <tr>
    <td>注文日</td>
    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>〒<%= @order.postal %><%= @order.address %><br>
        <%= @order.name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_methods_i18n %></td>
  </tr>
  <tr>
    <td>注文ステータス</td>
    <td><%= form_with(model: @order, url: admin_order_path(@order), local: true, class: "form-row") do |f| %>
          <%= f.select :status, Order.statuses_i18n.invert, {prompt: false} %>
          <%= f.submit "更新", class: "btn btn-success btn-sm" %>
        <% end %>
    </td>
  </tr>
</table>

<%= @order.order_details.each do |order_detail| %>
 <table class="table">
   <thead>
     <tr>
       <th>商品名</th>
       <th>単価（税込）</th>
       <th>数量</th>
       <th>小計</th>
       <th>制作ステータス</th>
     </tr>
   </thead>
   <tbody>
     <tr>
       <td><%= order_detail.item.name %></td>
       <td><%= order_detail.item.add_tax_price.to_s(:delimited) %></td>
       <td><%= order_detail.item.amount %></td>
       <td><%= (order_detail.item.add_tax_price*order_detail.item.amount).to_s(:delimited) %></td>
       <td><%= form_with(model: order_detail, url: admin_order_details_path(order_detail.id), local: true, class: "form-row") do |f| %>
             <%= f.select :making_status, OrderDetail.making_statuses_i18n.invert, {prompt: false} %>
             <%= f.submit "更新", class: "btn btn-success btn-sm" %>
           <% end %>
       </td>
     </tr>
   </tbody>
 </table>
<% end %>

<table class="table">
  <tr>
    <td>商品合計</td>
    <td><%= @total_price.to_s(:delimited) %>円</td>
  </tr>
  <tr>
    <td>送料</td>
    <td><%= @shipping_cost %>円</td>
  </tr>
  <tr>
    <td>合計</td>
    <td><%= @order.total_payment.to_s(:delimited) %>円</td>
  </tr>
</table>