  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <table>
          <thead>
            <tr>
              <th>ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                  <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      
      <div class="col-md-10">
        <h4><strong>商品一覧</strong><span>(全<%= @total_items %>件)</span></h4>
        <div class="row">
          <% @items.each do |item| %>
            <div>
              <div>
                <%= link_to item_path(item.id) do %>
                  <%= image_tag item.get_item_image(100, 100) %><br>
                  <%= item.name %>
                <% end %>
              </div>
              ￥<%= item.with_tax_price.to_s(:delimited) %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
