<h4>新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :名前 %>（姓）<%= f.text_field :last_name, placeholder:"令和", autofocus: true %>
    <%= f.label :（名） %><%= f.text_field :first_name, placeholder:"道子", autofocus: true %>
  </div></br>

  <div class="field">
    <%= f.label :フリガナ %>（セイ）<%= f.text_field :last_name_kana, placeholder:"レイワ", autofocus: true %>
    <%= f.label :（メイ） %><%= f.text_field :first_name_kana, placeholder:"ミチコ", autofocus: true %>
  </div><br>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, placeholder:"sample@sample.com", autofocus: true, autocomplete: "email" %>
  </div><br>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %>
    <%= f.text_field :postal_code, placeholder:"0000000", autofocus: true %>
  </div><br>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %>
    <%= f.text_field :phone_number, placeholder:"00000000000", autofocus: true %>
  </div><br>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class: "btn btn-success" %>
  </div>
<% end %><br><br>

<%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: "btn btn-dark" %><br>

<%= render "public/shared/links" %>
