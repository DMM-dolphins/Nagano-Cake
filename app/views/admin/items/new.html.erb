<div class="container">
  <h5 class="text-center", style="background-color:#eee; width:150px; margin:30px 0 30px 100px;"><b>商品新規登録</b></h5>
  <div class="row">
    <div class="col-8 m-auto">
      <div class="col-10">
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <label>商品画像</label>
    <%= f.file_field :image, accept: "image/*" %></br>
    <label>商品名</label><%= f.text_field :name, placeholder: "商品名" %></br>
    <label>商品説明</label><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></br>
    <label>ジャンル</label>
    <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "--選択してください--", class: "form-control col-sm-8" %></br>
    <label>税抜価格</label><%= f.text_field :price, placeholder: "1000" %>円</br>
    <label>販売ステータス</label>
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, "販売中", {value: :true, checked: true, style: "display: inline-block;"} %>
      <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, "販売停止中", {value: :false, style: "display: inline-block;"} %></br>
    <%= f.submit "新規登録", class: "btn btn-success" %></br>
  <% end %>
   </div>
    </div>
  </div>
</div>