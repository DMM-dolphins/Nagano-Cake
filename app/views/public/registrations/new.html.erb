<div class="container">
  <div class="row">
    <h4 class="col-md-3 mt-4 mb-4">新規会員登録</h4>
    <div class="col-md-10">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row mb-3">
          <%= f.label :名前,class:"col-md-3" %>
          <%= f.label :（姓）,class:"col-md-1" %>
          <%= f.text_field :last_name, placeholder:"令和", autofocus: true,class:"col-md-3" %>
          <%= f.label :（名）,class:"col-md-1" %>
          <%= f.text_field :first_name, placeholder:"道子", autofocus: true,class:"col-md-3" %>
        </div>

        <div class="row mb-3">
          <%= f.label :フリガナ,class:"col-md-3" %>
          <%= f.label :（セイ）,class:"col-md-1" %>
          <%= f.text_field :last_name_kana, placeholder:"レイワ", autofocus: true,class:"col-md-3" %>
          <%= f.label :（メイ）,class:"col-md-1" %>
          <%= f.text_field :first_name_kana, placeholder:"ミチコ", autofocus: true,class:"col-md-3" %>
        </div>

        <div class="row mb-3">
          <%= f.label :メールアドレス,class:"col-md-3" %>
          <%= f.email_field :email, placeholder:"sample@sample.com", autofocus: true, autocomplete: "email",class:"offset-md-1 col-md-3" %>
        </div>

        <div class="row mb-3">
          <%= f.label :郵便番号（ハイフンなし）,class:"col-md-3" %>
          <%= f.text_field :postal_code, placeholder:"0000000", autofocus: true,class:"offset-md-1 col-md-3" %>
        </div>

        <div class="row mb-3">
          <%= f.label :住所,class:"col-md-3" %>
          <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", autofocus: true,class:"offset-md-1 col-md-3" %>
        </div>

        <div class="row mb-3">
          <%= f.label :電話番号（ハイフンなし）,class:"col-md-3" %>
          <%= f.text_field :phone_number, placeholder:"00000000000", autofocus: true,class:"offset-md-1 col-md-3" %>
        </div>

        <div class="row mb-3">
          <% if @minimum_password_length %>
          <%= f.label :"パスワード(#{ @minimum_password_length }文字以上)" ,class:"col-md-3" %>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class:"offset-md-1 col-md-3" %>
        </div>

        <div class="row mb-3">
          <%= f.label :パスワード（確認用）,class:"col-md-3" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"offset-md-1 col-md-3" %>
        </div>

        <div class="btn01 actions", style="margin-left:300px">
          <%= f.submit "新規登録", class: "btn" %>
        </div>
      <% end %><br><br>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>



