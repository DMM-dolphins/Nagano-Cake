<h4>検索結果</h4>
<div class="row">
  <% @items.each do |item| %>
    <div>
      <div>
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_item_image(100, 100) %><br>
          <%= item.name %>
        <% end %>
      </div>
      ￥<%= item.with_tax_price.to_s(:delimited) %>
    </div>
  <% end %>
</div>