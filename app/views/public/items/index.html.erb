  <div class="container">
    <div class="row">
      <div class="col-2 mx-auto">
        <table class="table table-bordered mt-4">
          <thead>
            <tr>
              <th class="text-center">ジャンル検索</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td>
                  <%= genre.name %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
  
      <div class="col-9">
        <h4><strong>商品一覧</strong><span>(全<%= @total_items %>件)</span></h4>
        <div class="row">
  
          <% @items.each do |item| %>
            <div class="col-3">
              <%= link_to item_path(item.id) do %>
                <%= image_tag item.get_item_image(100, 100) %><br>
                <%= item.name %>
              <% end %>
            ￥<%= item.with_tax_price.to_s(:delimited) %>
            </div>
          <% end %>
        </div>
        <div class="row justify-content-center">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
