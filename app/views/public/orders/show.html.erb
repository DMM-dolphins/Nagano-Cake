<h4>注文履歴詳細</h4>

<div class="row">
  <div class="col">
    <h6>注文情報</h6>
    <table class="table">
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at.strftime('%Y/%-m/%-d') %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          <%= @order.postal_code %><br>
          <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= @order.status_i18n %></td>
      </tr>
    </table>
  </div>
  
  <div class="col">
    <h6>請求情報</h6>
    <table class="table">
      <tr>
        <td>商品合計</td>
        <td></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td></td>
      </tr>
      <tr>
        <td>ご請求額</td>
        <td></td>
      </tr>
    </table>
  </div>
</div>

<h6>注文内容</h6>
<table class="table">
  <thead>
    <tr>
      <td>商品</td>
      <td>単価（税込）</td>
      <td>個数</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
  <% @order.order_details.each do |datail| %>
    <tr>
      <td><%= datail.item.name %></td>
      <td><%= datail.price %></td>
      <td><%= datail.amount %></td>
      <td></td>
    </tr>
  <% end %>
  </tbody>
</table>
