<%= form_with model:address do |f| %>
  <div class="row mt-3 mb-3" style="margin-left: 65px;">
      <%= f.label :postal_code, '郵便番号(ハイフンなし)', class: "col-3 col-form-label" %>
      <%= f.text_field :postal_code, placeholder:'0000000', class: "col-3" %>
  </div>

  <div class="row mt-3 mb-3" style="margin-left: 65px;">
    <%= f.label :address, '住所', class: "col-3 col-form-label" %>
    <%= f.text_field :address, placeholder:'東京都渋谷区代々木神園町0-0', class: "col-7" %>
  </div>

  <div class="row" style="margin-left: 65px;">
      <%= f.label :name, '宛名', class: "col-3 col-form-label" %>
      <%= f.text_field :name, placeholder:'令和道子', class: "col-3" %>
      <div class="col text-right" style="margin-right: 150px;">
        <% if controller.action_name == 'index' %>
          <%= f.submit '新規登録', class: 'btn btn01' %>
        <% else %>
          <%= f.submit '変更内容を保存', class: 'btn btn01' %>
        <% end %>
      </div>
  </div>

  <div class = "row">
    <div class ="col text-right mr-5">
      
    </div>
  </div>
  </div>
<% end %>